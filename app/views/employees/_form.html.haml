= form_for(@employee) do |f|
  - if @employee.errors.any?
    #error_explanation
      %h2
        = pluralize(@employee.errors.count, "error")
        prohibited this employee from being saved:
      %ul
        - @employee.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :identification
    %br/
    = f.text_field :identification
  .field
    = f.label :leader_name
    %br/
    = f.text_field :leader_name
  .field
    = f.label :start_working_on
    %br/
    = f.date_select :start_working_on
  .actions
    = f.submit
